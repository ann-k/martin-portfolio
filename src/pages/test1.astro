---
import Document from "../layouts/Document.astro";

import Physics from "../components/Physics.astro";

interface Props {
  locale?: "ru" | "en";
}

const { locale = "en" } = Astro.props;
---

<style is:global>
  * {
    margin: 0;
  }
  html {
    font-family: system-ui, sans-serif;
  }
  body {
    display: grid;
    align-content: space-between;
    row-gap: 95px;

    width: 100vw;
    min-height: 100vh;
    overflow-x: hidden;
    overflow-y: auto;

    box-sizing: border-box;

    font-family: "Markin Sans Mono 10", system-ui, "Segoe UI", Roboto, Helvetica,
      Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji",
      "Segoe UI Symbol";
    text-transform: uppercase;
    font-size: 62px;
    line-height: 1;

    background-color: #ededed;
  }

  #physics-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
  }

  .content {
    height: 100vh;
    overflow: auto;
    box-sizing: border-box;
    padding: 50px;
  }

  @media screen and (max-width: 648px) {
    body {
      font-size: 38px;
      padding: 30px;
    }
    .content {
      padding: 30px;
    }
  }

  @media screen and (max-width: 500px) {
    body {
      font-size: 32px;
      padding: 20px;
    }
    .content {
      padding: 20px;
    }
  }

  .link {
    text-decoration: underline;
    color: inherit;
    cursor: pointer;
  }

  .footer {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    column-gap: 24px;
    row-gap: 44px;
  }

  .footer-item {
    display: flex;
  }

  #socials-group {
    flex-direction: row;
    column-gap: 24px;
    row-gap: 44px;
  }

  @media screen and (max-width: 1479px) {
    #email {
      order: 2;
    }
    #cta {
      order: 1;
      width: 100%;
    }
    #socials-group {
      order: 3;
    }
  }

  @media screen and (max-width: 1034px) {
    .footer-item {
      width: 100%;
    }

    #email {
      order: 3;
    }
    #socials-group {
      order: 2;
    }
  }

  .social {
    display: flex;
    place-content: center;
    place-items: center;

    background-color: #d9d9d9;
    border-radius: 100%;
    width: 90px;
    height: 90px;
    font-size: 32px;
    line-height: 36px;
    text-decoration: none;
    color: inherit;
    z-index: 1;
  }

  @media screen and (max-width: 648px) {
    .social {
      width: 70px;
      height: 70px;
    }
  }

  .box {
    position: absolute;
    height: 0;
    width: 0;
    border: none;
  }

  .box:hover {
    cursor: pointer;
  }

  .dialog-layer {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1;
    padding: 15px;
    display: flex;
    max-height: 100vh;
    overflow: hidden;
  }

  [role="dialog"] {
    position: relative;
    margin: auto;
    box-sizing: border-box;
    padding: 64px;
    background-color: #fff;
    border-radius: 42px;
    max-height: calc(100vh - 30px);
    overflow-y: auto;

    display: grid;
    column-gap: 48px;

    box-shadow:
      0 19px 38px rgb(0 0 0 / 12%),
      0 15px 12px rgb(0 0 0 / 22%);
  }

  @media screen and (min-width: 641px) {
    [role="dialog"] {
      grid-template-columns: minmax(0, 1fr) 1fr;
    }
  }

  [role="dialog"] img {
    width: 100%;
  }

  @media screen and (max-width: 640px) {
    [role="dialog"] {
      padding: 25px;
    }

    [role="dialog"] img {
      margin-bottom: 25px;
    }
  }

  .dialog-description {
    display: grid;
    font-size: 30px;
  }

  .dialog-description h2 {
    font-size: 45px;
    margin-bottom: 25px;
  }

  @media screen and (max-width: 648px) {
    .dialog-description {
      font-size: 24px;
    }

    .dialog-description h2 {
      font-size: 30px;
      margin-bottom: 25px;
    }
  }

  .dialog-description .text {
    display: grid;
    row-gap: 25px;
  }

  .dialog-description div:last-child {
    margin-top: 60px;
  }

  .dialog-close-button {
    position: absolute;
    top: 25px;
    right: 25px;
    height: 50px;
    width: 50px;
    display: flex;
    place-items: center;
    place-content: center;
    border: none;
    background-color: transparent;
    cursor: pointer;
  }

  .dialog-close-button:before,
  .dialog-close-button:after {
    position: absolute;
    content: " ";
    height: 20px;
    width: 2px;
    transform: rotate(45deg) translate(-50%, -50%);
    background-color: #333;
  }
  .dialog-close-button:before {
    transform: rotate(45deg);
  }
  .dialog-close-button:after {
    transform: rotate(-45deg);
  }

  .dialog-backdrop {
    overflow: hidden;
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1;
    background: rgb(0 0 0 / 30%);
  }

  .has-dialog {
    overflow: hidden;
  }
</style>

<Document title={locale === "en" ? "Martin Lezhenin" : "Мартин Леженин"}>
  <Physics locale={locale} />
</Document>
