---
import Document from "../layouts/Document.astro";
import Layout from "../layouts/Physics-layout.astro";

import { Physics } from "../components/Physics";

const { locale = "en" } = Astro.props;
---

<style is:global>
  * {
    margin: 0;
  }
  html {
    font-family: system-ui, sans-serif;
  }
  body {
    width: 100vw;
    height: 100vh;
    overflow: hidden;
  }
</style>

<Document title="Portfolio">
  {
    import.meta.env.PUBLIC_PHYSICS ? (
      <Layout>
        <Physics client:only="react" locale={locale} />
      </Layout>
    ) : null
  }
</Document>
