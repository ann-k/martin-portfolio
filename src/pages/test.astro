---
import Document from "../layouts/Document.astro";
import { Physics } from "../components/Physics";
---

<style is:global>
  * {
    margin: 0;
  }
  html {
    font-family: system-ui, sans-serif;
  }
  body {
    width: 100vw;
    height: 100vh;
    overflow: hidden;
  }
</style>

<Document title="Portfolio">
  {
    import.meta.env.PUBLIC_PHYSICS ? (
      <main>
        <Physics client:only="react" />
      </main>
    ) : null
  }
</Document>
